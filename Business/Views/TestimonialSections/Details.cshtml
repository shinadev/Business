@model Business.Models.Testimonial.TestimonialSection

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/Admin.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">Testimonial Section Details</h4>
            <div>
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-warning me-1">
                    <i class="bi bi-pencil-fill"></i> Edit
                </a>
                <a asp-action="Index" class="btn btn-sm btn-secondary">
                    <i class="bi bi-arrow-left-circle"></i> Back
                </a>
            </div>
        </div>
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3 text-muted">Section Title</dt>
                <dd class="col-sm-9">@Model.SectionTitle</dd>

                <dt class="col-sm-3 text-muted">Main Heading</dt>
                <dd class="col-sm-9">@Model.MainHeading</dd>
            </dl>
        </div>
    </div>
</div>

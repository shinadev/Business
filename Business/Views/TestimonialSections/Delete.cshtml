@model Business.Models.Testimonial.TestimonialSection

@{
    ViewData["Title"] = "Delete Testimonial Section";
    Layout = "~/Views/Shared/Admin.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-sm border-danger">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0">Delete Testimonial Section</h4>
        </div>
        <div class="card-body">
            <h5 class="text-warning">Are you sure you want to delete this item?</h5>
            <hr />

            <dl class="row">
                <dt class="col-sm-3">Section Title</dt>
                <dd class="col-sm-9">@Model.SectionTitle</dd>

                <dt class="col-sm-3">Main Heading</dt>
                <dd class="col-sm-9">@Model.MainHeading</dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Delete
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left-circle"></i> Back
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

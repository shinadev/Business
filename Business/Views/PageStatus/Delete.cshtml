@model Business.Models.Page.PageStatus

@{
    ViewData["Title"] = "Delete Page Status";
    Layout = "~/Views/Shared/Admin.cshtml";
}

<div class="container mt-4">
    <h1 class="text-danger">Delete Page Status</h1>
    <h5 class="text-warning">Are you sure you want to delete this item?</h5>
    <hr />

    <div class="card border-danger">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Name)
                </dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete" method="post" class="mt-3">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">
            <i class="fas fa-trash-alt"></i> Confirm Delete
        </button>
        <a asp-action="Index" class="btn btn-secondary ml-2">Back to List</a>
    </form>
</div>

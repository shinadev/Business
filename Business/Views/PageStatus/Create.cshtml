@model Business.Models.Page.PageStatus

@{
    ViewData["Title"] = "Create Page Status";
    Layout = "~/Views/Shared/Admin.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow rounded">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Create Page Status</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="form-group mb-3">
                            <label asp-for="Name" class="form-label fw-semibold">Status Name</label>
                            <input asp-for="Name" class="form-control" placeholder="Enter status name" />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <div class="form-group text-end">
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-check-circle"></i> Create
                            </button>
                            <a asp-action="Index" class="btn btn-secondary ms-2">
                                <i class="bi bi-arrow-left"></i> Back to List
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

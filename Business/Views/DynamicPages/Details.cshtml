@model Business.Models.Page.DynamicPage

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/Admin.cshtml";
}

<h1 class="mb-4">Page Details</h1>

<div>
    <h4>DynamicPage</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Title)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(m => m.Title)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Slug)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(m => m.Slug)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Content)</dt>
        <dd class="col-sm-9">@Html.Raw(Model.Content)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(m => m.MetaDescription)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(m => m.MetaDescription)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(m => m.MetaKeywords)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(m => m.MetaKeywords)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Status.Name)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(m => m.Status.Name)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(m => m.IsPublished)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(m => m.IsPublished)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(m => m.CreatedAt)</dt>
        <dd class="col-sm-9">@Model.CreatedAt.ToString("yyyy-MM-dd")</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(m => m.UpdatedAt)</dt>
        <dd class="col-sm-9">@Model.UpdatedAt?.ToString("yyyy-MM-dd")</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(m => m.PageCategory.Name)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(m => m.PageCategory.Name)</dd>
    </dl>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning me-2">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@model IEnumerable<Business.Models.Page.DynamicPage>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/Admin.cshtml";
}

<h1 class="mb-4">Pages</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<table class="table table-striped table-bordered table-hover">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Title)</th>
            <th>@Html.DisplayNameFor(model => model.Slug)</th>
            <th>@Html.DisplayNameFor(model => model.Content)</th>
            <th>@Html.DisplayNameFor(model => model.MetaDescription)</th>
            <th>@Html.DisplayNameFor(model => model.MetaKeywords)</th>
            <th>@Html.DisplayNameFor(model => model.Status.Name)</th>
            <th>@Html.DisplayNameFor(model => model.IsPublished)</th>
            <th>@Html.DisplayNameFor(model => model.CreatedAt)</th>
            <th>@Html.DisplayNameFor(model => model.UpdatedAt)</th>
            <th>@Html.DisplayNameFor(model => model.PageCategory.Name)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Title)</td>
                <td>@Html.DisplayFor(modelItem => item.Slug)</td>
                <td>@Html.Raw(item.Content.Length > 50 ? item.Content.Substring(0, 50) + "..." : item.Content)</td>
                <td>@Html.DisplayFor(modelItem => item.MetaDescription)</td>
                <td>@Html.DisplayFor(modelItem => item.MetaKeywords)</td>
                <td>@Html.DisplayFor(modelItem => item.Status.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.IsPublished)</td>
                <td>@item.CreatedAt.ToString("yyyy-MM-dd")</td>
                <td>@item.UpdatedAt?.ToString("yyyy-MM-dd")</td>
                <td>@Html.DisplayFor(modelItem => item.PageCategory.Name)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

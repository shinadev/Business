@model Business.Models.Menu.NavMenu

@{
    ViewData["Title"] = "Delete Menu";
    Layout = "~/Views/Shared/Admin.cshtml";
}

<div class="container-fluid mt-4">
    <div class="card border-danger shadow-sm">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0">Delete Confirmation</h4>
        </div>
        <div class="card-body">
            <h5 class="text-danger">Are you sure you want to delete this menu item?</h5>
            <hr />
            <dl class="row">
                <dt class="col-sm-3">Menu Name</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.MenuName)</dd>

                <dt class="col-sm-3">Controller</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Controller)</dd>

                <dt class="col-sm-3">Action</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Action)</dd>

                <dt class="col-sm-3">Route ID</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.RouteId)</dd>

                <dt class="col-sm-3">Route Slug</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.RouteSlug)</dd>

                <dt class="col-sm-3">Dropdown Group</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.DropdownGroup)</dd>

                <dt class="col-sm-3">Order</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Order)</dd>

                <dt class="col-sm-3">Is Button</dt>
                <dd class="col-sm-9">
                    @if (Model.IsButton)
                    {
                        <span class="badge bg-success">Yes</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">No</span>
                    }
                </dd>
            </dl>

            <form asp-action="Delete" class="mt-4">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger me-2">
                    <i class="bi bi-trash"></i> Delete
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
            </form>
        </div>
    </div>
</div>

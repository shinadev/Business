@model IEnumerable<Business.Models.Menu.NavMenu>

@{
    ViewData["Title"] = "Navbar Menus";
    Layout = "~/Views/Shared/Admin.cshtml";
}

<div class="container-fluid mt-4">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">Navbar Menus</h4>
            <a asp-action="Create" class="btn btn-light btn-sm">+ Create New</a>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover table-striped mb-0">
                    <thead class="thead-light">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.MenuName)</th>
                            <th>@Html.DisplayNameFor(model => model.Controller)</th>
                            <th>@Html.DisplayNameFor(model => model.Action)</th>
                            <th>@Html.DisplayNameFor(model => model.RouteId)</th>
                            <th>@Html.DisplayNameFor(model => model.RouteSlug)</th>
                            <th>@Html.DisplayNameFor(model => model.DropdownGroup)</th>
                            <th>@Html.DisplayNameFor(model => model.Order)</th>
                            <th>@Html.DisplayNameFor(model => model.IsButton)</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.MenuName)</td>
                                <td>@Html.DisplayFor(modelItem => item.Controller)</td>
                                <td>@Html.DisplayFor(modelItem => item.Action)</td>
                                <td>@Html.DisplayFor(modelItem => item.RouteId)</td>
                                <td>@Html.DisplayFor(modelItem => item.RouteSlug)</td>
                                <td>@Html.DisplayFor(modelItem => item.DropdownGroup)</td>
                                <td>@Html.DisplayFor(modelItem => item.Order)</td>
                                <td>
                                    @if (item.IsButton)
                                    {
                                        <span class="badge bg-success">Yes</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">No</span>
                                    }
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning me-1">Edit</a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info me-1">Details</a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

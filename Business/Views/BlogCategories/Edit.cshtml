@model Business.Models.Blog.BlogCategory

@{
    ViewData["Title"] = "Edit Blog Category";
    Layout = "~/Views/Shared/Admin.cshtml";
}

<div class="container py-4">
    <div class="card shadow-lg border-0 rounded-lg">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0"><i class="bi bi-pencil-square me-2"></i> Edit Blog Category</h4>
            <a asp-action="Index" class="btn btn-light btn-sm">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
        <div class="card-body p-4">
            <form asp-action="Edit">
                <input type="hidden" asp-for="Id" />
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-bold"></label>
                    <input asp-for="Name" class="form-control shadow-sm" placeholder="Enter category name..." />
                    <span asp-validation-for="Name" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Link" class="form-label fw-bold"></label>
                    <input asp-for="Link" class="form-control shadow-sm" placeholder="e.g. /blog/technology" />
                    <span asp-validation-for="Link" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="BlogDetailId" class="form-label fw-bold">Related Blog</label>
                    <select asp-for="BlogDetailId" class="form-select shadow-sm" asp-items="ViewBag.BlogDetailId">
                        <option value="">-- Select a Blog --</option>
                    </select>
                    <span asp-validation-for="BlogDetailId" class="text-danger small"></span>
                </div>

                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-success px-4">
                        <i class="bi bi-save me-1"></i> Save Changes
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

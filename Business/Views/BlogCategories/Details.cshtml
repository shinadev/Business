@model Business.Models.Blog.BlogCategory

@{
    ViewData["Title"] = "Blog Category Details";
    Layout = "~/Views/Shared/Admin.cshtml";
}

<div class="container mt-4">
    <h1 class="mb-4">
        <i class="bi bi-card-text"></i> Blog Category Details
    </h1>

    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <h5 class="card-title">@Html.DisplayFor(model => model.Name)</h5>
            <p class="mb-2"><strong>Link:</strong> @Html.DisplayFor(model => model.Link)</p>
            <p class="mb-0">
                <strong>Related Blog:</strong>
                @Html.DisplayFor(model => model.BlogDetail.Title)
            </p>
        </div>
    </div>

    <div class="d-flex">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary me-2">
            <i class="bi bi-pencil-square"></i> Edit
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>
</div>

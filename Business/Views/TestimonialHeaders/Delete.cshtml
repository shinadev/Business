@model Business.Models.Testimonial.TestimonialHeader

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/Admin.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-sm border-danger">
        <div class="card-header bg-danger text-white">
            <h3>Delete Testimonial Header</h3>
        </div>
        <div class="card-body">
            <h5 class="text-warning">Are you sure you want to delete this item?</h5>
            <hr />

            <dl class="row">
                <dt class="col-sm-3">Title</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Title)</dd>

                <dt class="col-sm-3">Breadcrumb Home Text</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.BreadcrumbHomeText)</dd>

                <dt class="col-sm-3">Breadcrumb Home URL</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.BreadcrumbHomeUrl)</dd>

                <dt class="col-sm-3">Breadcrumb Current Text</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.BreadcrumbCurrentText)</dd>

                <dt class="col-sm-3">Breadcrumb Current URL</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.BreadcrumbCurrentUrl)</dd>

                <dt class="col-sm-3">Image</dt>
                <dd class="col-sm-9">
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <img src="@Model.ImageUrl" alt="Current Image" class="img-thumbnail" style="max-width:200px;" />
                    }
                    else
                    {
                        <span class="text-muted">No image available</span>
                    }
                </dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex justify-content-between mt-3">
                    <input type="submit" value="Delete" class="btn btn-danger" />
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

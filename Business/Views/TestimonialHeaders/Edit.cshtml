@model Business.Models.Testimonial.TestimonialHeader

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/Admin.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h3>Edit Testimonial Header</h3>
        </div>
        <div class="card-body">
            <form asp-action="Edit" enctype="multipart/form-data">
                <input type="hidden" asp-for="Id" />
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="Title" class="form-label"></label>
                    <input asp-for="Title" class="form-control" placeholder="Enter title" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="BreadcrumbHomeText" class="form-label"></label>
                    <input asp-for="BreadcrumbHomeText" class="form-control" placeholder="Home text" />
                    <span asp-validation-for="BreadcrumbHomeText" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="BreadcrumbHomeUrl" class="form-label"></label>
                    <input asp-for="BreadcrumbHomeUrl" class="form-control" placeholder="/home-url" />
                    <span asp-validation-for="BreadcrumbHomeUrl" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="BreadcrumbCurrentText" class="form-label"></label>
                    <input asp-for="BreadcrumbCurrentText" class="form-control" placeholder="Current page text" />
                    <span asp-validation-for="BreadcrumbCurrentText" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="BreadcrumbCurrentUrl" class="form-label"></label>
                    <input asp-for="BreadcrumbCurrentUrl" class="form-control" placeholder="/current-url" />
                    <span asp-validation-for="BreadcrumbCurrentUrl" class="text-danger"></span>
                </div>

                <!-- Current Image Preview -->
                <div class="mb-3">
                    <label class="form-label">Current Image</label>
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <div class="mb-2">
                            <img src="@Model.ImageUrl" alt="Current Image" class="img-thumbnail" style="max-width:200px;" />
                        </div>
                    }
                    else
                    {
                        <span class="text-muted">No image available</span>
                    }
                </div>

                <!-- Replace Image Upload -->
                <div class="mb-3">
                    <label class="form-label">Replace Image (optional)</label>
                    <input type="file" name="ImageFile" id="ImageFile" class="form-control" accept="image/*" />
                </div>

                <!-- New Image Preview -->
                <div class="mb-3 text-center">
                    <img id="imgPreview" src="#" alt="New Image Preview" class="img-thumbnail" style="display:none; max-width:250px;" />
                </div>

                <div class="d-flex justify-content-between">
                    <input type="submit" value="Save Changes" class="btn btn-success" />
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Live new image preview
        document.getElementById('ImageFile').addEventListener('change', function(event) {
            const [file] = event.target.files;
            if (file) {
                const preview = document.getElementById('imgPreview');
                preview.src = URL.createObjectURL(file);
                preview.style.display = 'block';
            }
        });
    </script>
}

@model Business.Models.Page.PagePlug

@{
    ViewData["Title"] = "Page Plug Details";
    Layout = "~/Views/Shared/Admin.cshtml";
}

<div class="container mt-4">
    <h1 class="mb-4">@ViewData["Title"]</h1>

    <div class="card shadow-sm">
        <div class="card-body">
            <h4 class="card-title mb-3">Page Plug Info</h4>
            <dl class="row">
                <dt class="col-sm-3 fw-semibold">@Html.DisplayNameFor(m => m.Title)</dt>
                <dd class="col-sm-9">@Model.Title</dd>

                <dt class="col-sm-3 fw-semibold">@Html.DisplayNameFor(m => m.Description)</dt>
                <dd class="col-sm-9">@Model.Description</dd>

                <dt class="col-sm-3 fw-semibold">@Html.DisplayNameFor(m => m.Content)</dt>
                <dd class="col-sm-9">@Model.Content</dd>

                <dt class="col-sm-3 fw-semibold">@Html.DisplayNameFor(m => m.CreatedAt)</dt>
                <dd class="col-sm-9">@Model.CreatedAt.ToString("yyyy-MM-dd HH:mm")</dd>

                <dt class="col-sm-3 fw-semibold">@Html.DisplayNameFor(m => m.UpdatedAt)</dt>
                <dd class="col-sm-9">@Model.UpdatedAt?.ToString("yyyy-MM-dd HH:mm") ?? "—"</dd>

                <dt class="col-sm-3 fw-semibold">Page Slug</dt>
                <dd class="col-sm-9">@Model.Page?.Slug ?? "N/A"</dd>
            </dl>

            <div class="mt-4 d-flex justify-content-between">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                    <i class="bi bi-pencil"></i> Edit
                </a>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
            </div>
        </div>
    </div>
</div>

@model Business.Models.Service.ServiceHeader

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/Admin.cshtml";
}

<h1>Edit Service Header</h1>

<h4>ServiceHeader</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" enctype="multipart/form-data" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label asp-for="Title" class="form-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="BreadcrumbHomeText" class="form-label"></label>
                <input asp-for="BreadcrumbHomeText" class="form-control" />
                <span asp-validation-for="BreadcrumbHomeText" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="BreadcrumbHomeUrl" class="form-label"></label>
                <input asp-for="BreadcrumbHomeUrl" class="form-control" />
                <span asp-validation-for="BreadcrumbHomeUrl" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="BreadcrumbCurrentText" class="form-label"></label>
                <input asp-for="BreadcrumbCurrentText" class="form-control" />
                <span asp-validation-for="BreadcrumbCurrentText" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="BreadcrumbCurrentUrl" class="form-label"></label>
                <input asp-for="BreadcrumbCurrentUrl" class="form-control" />
                <span asp-validation-for="BreadcrumbCurrentUrl" class="text-danger"></span>
            </div>

            <!-- Image Upload Input -->
            <div class="mb-3">
                <label for="ImageUpload" class="form-label">Upload Image</label>
                <input type="file" name="ImageFile" id="ImageUpload" class="form-control" accept="image/*" onchange="previewImage(event)" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>

            <!-- Image Preview -->
            <div class="mb-3">
                <label class="form-label">Image Preview</label><br />
                <img id="imagePreview"
                     src="@(string.IsNullOrEmpty(Model.ImageUrl) ? "https://via.placeholder.com/250x150?text=No+Image" : Model.ImageUrl)"
                     alt="Preview Image"
                     style="max-height: 200px; border-radius: 5px;"
                     class="img-thumbnail" />
            </div>

            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-action="Index" class="btn btn-secondary ms-2">Back to List</a>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        function previewImage(event) {
            var input = event.target;
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function () {
                    var output = document.getElementById('imagePreview');
                    output.src = reader.result;
                };
                reader.readAsDataURL(input.files[0]);
            }
        }
    </script>
}

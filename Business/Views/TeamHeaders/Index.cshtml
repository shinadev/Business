@model IEnumerable<Business.Models.Team.TeamHeader>

@{
    ViewData["Title"] = "Team Headers";
    Layout = "~/Views/Shared/Admin.cshtml";
}

<h2 class="mb-4">Team Headers</h2>

<p>
    <a asp-action="Create" class="btn btn-success"><i class="bi bi-plus-circle"></i> Create New</a>
</p>

<div class="table-responsive">
    <table class="table table-striped table-hover align-middle">
        <thead class="table-dark">
            <tr>
                <th>Title</th>
                <th>Breadcrumb Home</th>
                <th>Breadcrumb URL</th>
                <th>Current Text</th>
                <th>Current URL</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Title</td>
                    <td>@item.BreadcrumbHomeText</td>
                    <td>@item.BreadcrumbHomeUrl</td>
                    <td>@item.BreadcrumbCurrentText</td>
                    <td>@item.BreadcrumbCurrentUrl</td>
                    <td>
                        @if (!string.IsNullOrEmpty(item.ImageUrl))
                        {
                            <img src="@item.ImageUrl" alt="Image" style="max-height:60px;" class="img-thumbnail" />
                        }
                        else
                        {
                            <span class="text-muted">No image</span>
                        }
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary me-1"><i class="bi bi-pencil-square"></i> Edit</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info me-1"><i class="bi bi-eye"></i> Details</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger"><i class="bi bi-trash"></i> Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@model Business.Models.Team.TeamHeader

@{
    ViewData["Title"] = "Delete Team Header";
    Layout = "~/Views/Shared/Admin.cshtml";
}

<h2 class="mb-4 text-danger">Delete Team Header</h2>

<div class="card shadow-sm mb-4">
    <div class="card-body">
        <h5 class="mb-3">Are you sure you want to delete this item?</h5>

        <dl class="row">
            <dt class="col-sm-3">Title</dt>
            <dd class="col-sm-9">@Model.Title</dd>

            <dt class="col-sm-3">Breadcrumb Home Text</dt>
            <dd class="col-sm-9">@Model.BreadcrumbHomeText</dd>

            <dt class="col-sm-3">Breadcrumb Home URL</dt>
            <dd class="col-sm-9">@Model.BreadcrumbHomeUrl</dd>

            <dt class="col-sm-3">Breadcrumb Current Text</dt>
            <dd class="col-sm-9">@Model.BreadcrumbCurrentText</dd>

            <dt class="col-sm-3">Breadcrumb Current URL</dt>
            <dd class="col-sm-9">@Model.BreadcrumbCurrentUrl</dd>

            <dt class="col-sm-3">Header Image</dt>
            <dd class="col-sm-9">
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="@Model.ImageUrl" alt="Header Image" class="img-fluid rounded shadow-sm" style="max-height:150px;" />
                }
                else
                {
                    <span class="text-muted">No image available</span>
                }
            </dd>
        </dl>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                <button type="submit" class="btn btn-danger">Delete</button>
            </div>
        </form>
    </div>
</div>

@model Business.Models.Team.TeamSection

@{
    ViewData["Title"] = "Team Section Details";
    Layout = "~/Views/Shared/Admin.cshtml";
}

<h1 class="mb-4">Team Section Details</h1>

<div class="card mb-4">
    <div class="card-body">
        <h5>Section Title:</h5>
        <p>@Model.SectionTitle</p>

        <h5>Main Heading:</h5>
        <p>@Model.MainHeading</p>
    </div>
</div>

<h3 class="mb-3">Team Members</h3>

@if (Model.TeamMember != null && Model.TeamMember.Any())
{
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Full Name</th>
                <th>Designation</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var member in Model.TeamMember)
            {
                <tr>
                    <td>@member.FullName</td>
                    <td>@member.Designation</td>
                    <td>
                        <a asp-controller="TeamMembers" asp-action="Edit" asp-route-id="@member.Id" class="btn btn-warning btn-sm me-1">Edit</a>
                        <a asp-controller="TeamMembers" asp-action="Delete" asp-route-id="@member.Id" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-muted">No team members added yet.</p>
}

<p>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</p>

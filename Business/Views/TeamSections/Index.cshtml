@model IEnumerable<Business.Models.Team.TeamSection>

@{
    ViewData["Title"] = "Team Sections";
    Layout = "~/Views/Shared/Admin.cshtml";
}

<h1 class="mb-4">Team Sections</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle me-1"></i> Create New Section
    </a>
</p>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Section Title</th>
            <th>Main Heading</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.SectionTitle</td>
                <td>@item.MainHeading</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm me-1">Details</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm me-1">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

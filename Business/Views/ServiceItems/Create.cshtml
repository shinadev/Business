@model Business.Models.Service.ServiceItem

@{
    ViewData["Title"] = "Create Service Item";
    Layout = "~/Views/Shared/Admin.cshtml";
}

<h1 class="mb-4">Create Service Item</h1>

<div class="row">
    <div class="col-md-6 col-lg-4">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <div class="mb-3">
                <label asp-for="IconClass" class="form-label"></label>
                <input asp-for="IconClass" class="form-control" placeholder="e.g. fa fa-shield-alt" />
                <span asp-validation-for="IconClass" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Title" class="form-label"></label>
                <input asp-for="Title" class="form-control" placeholder="Enter title" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control" rows="3" placeholder="Enter description"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="LinkUrl" class="form-label"></label>
                <input asp-for="LinkUrl" class="form-control" placeholder="https://example.com" />
                <span asp-validation-for="LinkUrl" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ServiceSectionId" class="form-label">Service Section</label>
                <select asp-for="ServiceSectionId" class="form-select" asp-items="ViewBag.ServiceSectionId">
                    <option value="">-- Select Section --</option>
                </select>
                <span asp-validation-for="ServiceSectionId" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Create</button>
            <a asp-action="Index" class="btn btn-secondary ms-2">Back to List</a>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

@model Business.Models.About.AboutHeader

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/Admin.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>About Header</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BreadcrumbHomeText)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BreadcrumbHomeText)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BreadcrumbHomeUrl)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BreadcrumbHomeUrl)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BreadcrumbCurrentText)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BreadcrumbCurrentText)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BreadcrumbCurrentUrl)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BreadcrumbCurrentUrl)
        </dd>

        <dt class="col-sm-2">
            Image
        </dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <img src="@Url.Content(Model.ImageUrl)" alt="Header Image" class="img-fluid rounded border" style="max-height:200px;" />
            }
            else
            {
                <span>No image available</span>
            }
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>

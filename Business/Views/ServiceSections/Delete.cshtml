@model Business.ViewModels.ServiceSectionViewModel

@{
    ViewData["Title"] = "Delete Service Section";
    Layout = "~/Views/Shared/Admin.cshtml";
}

<div class="container mt-4">
    <div class="card shadow rounded-3">
        <div class="card-header bg-danger text-white">
            <h4><i class="bi bi-trash-fill"></i> Delete Service Section</h4>
        </div>
        <div class="card-body">
            <p>Are you sure you want to delete this Service Section?</p>

            <dl class="row mb-3">
                <dt class="col-sm-3 fw-bold">Small Title</dt>
                <dd class="col-sm-9">@Model.ServiceSection.SmallTitle</dd>

                <dt class="col-sm-3 fw-bold">Main Title</dt>
                <dd class="col-sm-9">@Model.ServiceSection.MainTitle</dd>

                @if (Model.CallToAction != null)
                {
                    <dt class="col-sm-3 fw-bold">CTA Title</dt>
                    <dd class="col-sm-9">@Model.CallToAction.Title</dd>
                }
            </dl>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="ServiceSection.Id" />
                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-arrow-left"></i> Cancel</a>
                    <button type="submit" class="btn btn-danger"><i class="bi bi-trash-fill"></i> Delete</button>
                </div>
            </form>
        </div>
    </div>
</div>

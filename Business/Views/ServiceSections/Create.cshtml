@model Business.Models.Service.ServiceSection

@{
    ViewData["Title"] = "Create Service Section";
    Layout = "~/Views/Shared/Admin.cshtml";
}

<div class="container mt-4">
    <div class="card shadow rounded-3">
        <div class="card-header bg-success text-white">
            <h4><i class="bi bi-plus-circle"></i> Create Service Section</h4>
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="SmallTitle" class="form-label fw-bold"></label>
                    <input asp-for="SmallTitle" class="form-control" placeholder="Enter small title" />
                    <span asp-validation-for="SmallTitle" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="MainTitle" class="form-label fw-bold"></label>
                    <input asp-for="MainTitle" class="form-control" placeholder="Enter main title" />
                    <span asp-validation-for="MainTitle" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Back
                    </a>
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-save"></i> Create
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

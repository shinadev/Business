@model Business.Models.Site.Logo

@{
    ViewData["Title"] = "Logo Details";
    Layout = "~/Views/Shared/Admin.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-lg rounded-3">
        <div class="card-header bg-info text-white">
            <h3 class="mb-0">📌 Logo Details</h3>
        </div>
        <div class="card-body">
            <dl class="row mb-3">
                <dt class="col-sm-3 fw-bold">Logo Name</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

                <dt class="col-sm-3 fw-bold">Logo Image</dt>
                <dd class="col-sm-9">
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <img src="@Model.ImageUrl" alt="@Model.Name" class="img-thumbnail shadow-sm" style="max-height:120px;" />
                    }
                    else
                    {
                        <span class="text-muted">No image uploaded</span>
                    }
                </dd>
            </dl>

            <div class="d-flex gap-2">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                    <i class="bi bi-pencil-square"></i> Edit
                </a>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>
</div>

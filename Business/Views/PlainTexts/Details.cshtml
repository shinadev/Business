@model Business.Models.Blog.PlainText

@{
    ViewData["Title"] = "PlainText Details";
    Layout = "~/Views/Shared/Admin.cshtml";
}

<div class="container py-4">
    <div class="card shadow-lg border-0 rounded-lg">
        <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0"><i class="fas fa-info-circle me-2"></i> PlainText Details</h4>
            <a asp-action="Index" class="btn btn-light btn-sm">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
        </div>
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3 fw-bold">Content</dt>
                <dd class="col-sm-9">@Model.Content</dd>

                <dt class="col-sm-3 fw-bold">Read More Link</dt>
                <dd class="col-sm-9">@Model.ReadMoreLink</dd>

                <dt class="col-sm-3 fw-bold">Related Blog</dt>
                <dd class="col-sm-9">@Model.BlogDetail?.Title</dd>
            </dl>
        </div>
        <div class="card-footer d-flex justify-content-end">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary me-2">
                <i class="fas fa-edit me-1"></i> Edit
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-list me-1"></i> Back to List
            </a>
        </div>
    </div>
</div>

@model Business.Models.Blog.BlogDetail
@{
    ViewData["Title"] = "Blog Details";
    Layout = "~/Views/Shared/Admin.cshtml";
}

<div class="container mt-4">
    <h2 class="mb-4 text-info"><i class="bi bi-info-circle"></i> Blog Details</h2>

    <div class="card shadow p-4">
        <h4 class="text-primary">@Model.Title</h4>

        <div class="row mt-3">
            <div class="col-md-6 mb-3">
                <h6>Main Image</h6>
                @if (!string.IsNullOrEmpty(Model.MainImageUrl))
                {
                    <img src="@Model.MainImageUrl" class="img-fluid border rounded" />
                }
            </div>
            <div class="col-md-6 mb-3">
                <h6>Sidebar Image</h6>
                @if (!string.IsNullOrEmpty(Model.SidebarImageUrl))
                {
                    <img src="@Model.SidebarImageUrl" class="img-fluid border rounded" />
                }
            </div>
        </div>

        <h6>Content</h6>
        @foreach (var paragraph in Model.Paragraphs)
        {
            <p>@paragraph</p>
        }

        <div class="mt-4">
            <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-arrow-left"></i> Back</a>
        </div>
    </div>
</div>

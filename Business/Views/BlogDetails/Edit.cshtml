@model Business.Models.Blog.BlogDetail
@{
    ViewData["Title"] = "Edit Blog Detail";
    Layout = "~/Views/Shared/Admin.cshtml";
}

<div class="container mt-4">
    <h2 class="mb-4 text-warning"><i class="bi bi-pencil"></i> Edit Blog</h2>
    <div class="card shadow p-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />

            <div class="row">
                <!-- Title -->
                <div class="col-md-12 mb-3">
                    <label asp-for="Title" class="form-label fw-bold"></label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <!-- Main Image -->
                <div class="col-md-6 mb-3">
                    <label class="form-label fw-bold">Main Image</label>
                    <input type="file" name="MainImage" class="form-control" onchange="previewImage(this, '#mainImagePreview')" />
                    <img id="mainImagePreview" src="@Model.MainImageUrl" class="img-fluid mt-2 border rounded" style="max-height:200px;" />
                </div>

                <!-- Sidebar Image -->
                <div class="col-md-6 mb-3">
                    <label class="form-label fw-bold">Sidebar Image</label>
                    <input type="file" name="SidebarImage" class="form-control" onchange="previewImage(this, '#sidebarImagePreview')" />
                    <img id="sidebarImagePreview" src="@Model.SidebarImageUrl" class="img-fluid mt-2 border rounded" style="max-height:200px;" />
                </div>

                <!-- Paragraphs -->
                <div class="col-md-12 mb-3">
                    <label class="form-label fw-bold">Paragraphs</label>
                    <textarea name="Paragraphs" class="form-control" rows="5">@string.Join("\n", Model.Paragraphs)</textarea>
                </div>
            </div>

            <div class="d-flex justify-content-between mt-3">
                <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-arrow-left"></i> Back</a>
                <button type="submit" class="btn btn-primary"><i class="bi bi-save"></i> Update Blog</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        function previewImage(input, previewId) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    document.querySelector(previewId).src = e.target.result;
                }
                reader.readAsDataURL(input.files[0]);
            }
        }
    </script>
}

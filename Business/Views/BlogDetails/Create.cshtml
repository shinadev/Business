@model Business.Models.Blog.BlogDetail
@{
    ViewData["Title"] = "Create Blog Detail";
    Layout = "~/Views/Shared/Admin.cshtml";
}

<div class="container mt-4">
    <h2 class="mb-4 text-primary"><i class="bi bi-pencil-square"></i> Create Blog</h2>
    <div class="card shadow p-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div class="row">
                <!-- Title -->
                <div class="col-md-12 mb-3">
                    <label asp-for="Title" class="form-label fw-bold"></label>
                    <input asp-for="Title" class="form-control" placeholder="Enter blog title" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <!-- Main Image -->
                <div class="col-md-6 mb-3">
                    <label class="form-label fw-bold">Main Image</label>
                    <input type="file" name="MainImage" class="form-control" onchange="previewImage(this, '#mainImagePreview')" />
                    <img id="mainImagePreview" src="/images/no-image.png" class="img-fluid mt-2 border rounded" style="max-height:200px;" />
                </div>

                <!-- Sidebar Image -->
                <div class="col-md-6 mb-3">
                    <label class="form-label fw-bold">Sidebar Image</label>
                    <input type="file" name="SidebarImage" class="form-control" onchange="previewImage(this, '#sidebarImagePreview')" />
                    <img id="sidebarImagePreview" src="/images/no-image.png" class="img-fluid mt-2 border rounded" style="max-height:200px;" />
                </div>

                <!-- Paragraphs -->
                <div class="col-md-12 mb-3">
                    <label class="form-label fw-bold">Paragraphs</label>
                    <textarea name="Paragraphs" class="form-control" rows="5" placeholder="Write your blog content..."></textarea>
                </div>
            </div>

            <div class="d-flex justify-content-between mt-3">
                <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-arrow-left"></i> Back</a>
                <button type="submit" class="btn btn-success"><i class="bi bi-check-lg"></i> Save Blog</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        function previewImage(input, previewId) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    document.querySelector(previewId).src = e.target.result;
                }
                reader.readAsDataURL(input.files[0]);
            }
        }
    </script>
}

@model IEnumerable<Business.Models.Blog.BlogDetail>
@{
    ViewData["Title"] = "Blog List";
    Layout = "~/Views/Shared/Admin.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary"><i class="bi bi-journal-text"></i> Blog List</h2>
        <a asp-action="Create" class="btn btn-success"><i class="bi bi-plus-circle"></i> Add Blog</a>
    </div>

    <div class="card shadow p-3">
        <table class="table table-hover table-bordered align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Title</th>
                    <th>Main Image</th>
                    <th>Sidebar Image</th>
                    <th>Paragraph Count</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var blog in Model)
                {
                    <tr>
                        <td>@blog.Title</td>
                        <td>
                            @if (!string.IsNullOrEmpty(blog.MainImageUrl))
                            {
                                <img src="@blog.MainImageUrl" class="img-thumbnail" style="max-height:80px;" />
                            }
                        </td>
                        <td>
                            @if (!string.IsNullOrEmpty(blog.SidebarImageUrl))
                            {
                                <img src="@blog.SidebarImageUrl" class="img-thumbnail" style="max-height:80px;" />
                            }
                        </td>
                        <td>@(blog.Paragraphs?.Count ?? 0)</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@blog.Id" class="btn btn-info btn-sm"><i class="bi bi-eye"></i></a>
                            <a asp-action="Edit" asp-route-id="@blog.Id" class="btn btn-warning btn-sm"><i class="bi bi-pencil"></i></a>
                            <a asp-action="Delete" asp-route-id="@blog.Id" class="btn btn-danger btn-sm"><i class="bi bi-trash"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@model Business.Models.Menu.FooterSocial

@{
    ViewData["Title"] = "Footer Social Details";
    Layout = "~/Views/Shared/Admin.cshtml";
}

<div class="container py-4">
    <div class="card shadow rounded">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Footer Social - Details</h4>
        </div>
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3">Platform</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Platform)</dd>

                <dt class="col-sm-3">Icon Class</dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.IconClass)
                    <i class="@Model.IconClass ms-2"></i>
                </dd>

                <dt class="col-sm-3">URL</dt>
                <dd class="col-sm-9">
                    <a href="@Model.Url" target="_blank">@Model.Url</a>
                </dd>

                <dt class="col-sm-3">Linked Footer Menu</dt>
                <dd class="col-sm-9">@Model.FooterMenu?.AboutTitle (@Model.FooterMenu?.Id)</dd>
            </dl>
        </div>
        <div class="card-footer bg-light d-flex justify-content-between">
            <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
            <a class="btn btn-sm btn-secondary" asp-action="Index">Back to List</a>
        </div>
    </div>
</div>

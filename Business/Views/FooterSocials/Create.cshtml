@model Business.Models.Menu.FooterSocial

@{
    ViewData["Title"] = "Create Footer Social";
    Layout = "~/Views/Shared/Admin.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-lg rounded">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Add New Footer Social Link</h4>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <div class="mb-3">
                    <label asp-for="Platform" class="form-label">Social Platform</label>
                    <input asp-for="Platform" class="form-control" placeholder="e.g., Facebook" />
                    <span asp-validation-for="Platform" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="IconClass" class="form-label">Icon Class</label>
                    <input asp-for="IconClass" class="form-control" placeholder="e.g., fab fa-facebook-f" />
                    <span asp-validation-for="IconClass" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Url" class="form-label">URL</label>
                    <input asp-for="Url" class="form-control" placeholder="https://facebook.com/yourpage" />
                    <span asp-validation-for="Url" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="FooterMenuId" class="form-label">Select Footer Menu</label>
                    <select asp-for="FooterMenuId" class="form-select" asp-items="ViewBag.FooterMenuId">
                        <option disabled selected>-- Select Footer Menu --</option>
                    </select>
                    <span asp-validation-for="FooterMenuId" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                    <input type="submit" value="Create" class="btn btn-success" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

@model IEnumerable<Business.Models.Menu.FooterSocial>

@{
    ViewData["Title"] = "Social Links";
    Layout = "~/Views/Shared/Admin.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Social Media Links</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Add New
        </a>
    </div>

    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.First().Platform)</th>
                <th>@Html.DisplayNameFor(model => model.First().IconClass)</th>
                <th>@Html.DisplayNameFor(model => model.First().Url)</th>
                <th>Footer Menu</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Platform</td>
                    <td><i class="@item.IconClass"></i> <small>@item.IconClass</small></td>
                    <td><a href="@item.Url" target="_blank">@item.Url</a></td>
                    <td>@item.FooterMenu?.AboutTitle</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

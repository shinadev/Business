@model Business.Models.Menu.FooterSocial

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/Admin.cshtml";
}

<h1 class="mb-4">Delete Footer Social</h1>

<h3 class="text-danger mb-3">Are you sure you want to delete this?</h3>

<div class="card shadow-sm p-4 mb-4">
    <h4 class="mb-3">FooterSocial Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3 fw-semibold">@Html.DisplayNameFor(model => model.Platform)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Platform)</dd>

        <dt class="col-sm-3 fw-semibold">@Html.DisplayNameFor(model => model.IconClass)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.IconClass)</dd>

        <dt class="col-sm-3 fw-semibold">@Html.DisplayNameFor(model => model.Url)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Url)</dd>

        <dt class="col-sm-3 fw-semibold">@Html.DisplayNameFor(model => model.FooterMenu)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.FooterMenu.Id)</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger me-2">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>

@using Business.Models.Site
@using Business.Models.Page
@using Business.Models.Menu
@using Business.Data
@inject ApplicationDbContext _context
@{
    // Fetch dynamic data
    var favicon = _context.Favicons.FirstOrDefault() ?? new Favicon { ImageUrl = "/img/favicon.ico", Title = "My Website" };
    var logo = _context.Logos.FirstOrDefault() ?? new Logo { ImageUrl = "/img/logo.png", Name = "My Website" };
    var topBar = _context.TopBarMenus.FirstOrDefault() ?? new TopBarMenu();
    var navMenus = _context.NavMenus.OrderBy(n => n.Order).ToList();
    var footer = _context.FooterMenus.FirstOrDefault() ?? new FooterMenu();
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - @favicon.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="keywords" content="@favicon.Name" />
    <meta name="description" content="@favicon.Title" />
    
    <!-- Favicon -->
    <link rel="icon" href="@favicon.ImageUrl" />

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;600;700;800&family=Rubik:wght@400;500;600;700&display=swap" rel="stylesheet" />

    <!-- Font Awesome & Bootstrap Icons -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet" />

    <!-- Libraries -->
    <link href="~/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet" />
    <link href="~/lib/animate/animate.min.css" rel="stylesheet" />

    <!-- Custom Styles -->
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/style.css" rel="stylesheet" />
</head>
<body>
    <!-- Spinner -->
    <div id="spinner" class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
        <div class="spinner"></div>
    </div>

    <!-- Topbar -->
    <div class="container-fluid bg-dark px-5 d-none d-lg-block">
        <div class="row gx-0">
            <div class="col-lg-8 text-center text-lg-start mb-2 mb-lg-0">
                <div class="d-inline-flex align-items-center" style="height:45px;">
                    <small class="me-3 text-light"><i class="fa fa-map-marker-alt me-2"></i>@topBar.Address</small>
                    <small class="me-3 text-light"><i class="fa fa-phone-alt me-2"></i>@topBar.Phone</small>
                    <small class="text-light"><i class="fa fa-envelope-open me-2"></i>@topBar.Email</small>
                </div>
            </div>
            <div class="col-lg-4 text-center text-lg-end">
                <div class="d-inline-flex align-items-center" style="height:45px;">
                    <a class="btn btn-sm btn-outline-light btn-sm-square rounded-circle me-2" href="@topBar.TwitterUrl"><i class="fab fa-twitter fw-normal"></i></a>
                    <a class="btn btn-sm btn-outline-light btn-sm-square rounded-circle me-2" href="@topBar.FacebookUrl"><i class="fab fa-facebook-f fw-normal"></i></a>
                    <a class="btn btn-sm btn-outline-light btn-sm-square rounded-circle me-2" href="@topBar.LinkedInUrl"><i class="fab fa-linkedin-in fw-normal"></i></a>
                    <a class="btn btn-sm btn-outline-light btn-sm-square rounded-circle me-2" href="@topBar.InstagramUrl"><i class="fab fa-instagram fw-normal"></i></a>
                    <a class="btn btn-sm btn-outline-light btn-sm-square rounded-circle" href="@topBar.YouTubeUrl"><i class="fab fa-youtube fw-normal"></i></a>
                </div>
            </div>
        </div>
    </div>

    <!-- Navbar -->
    <div class="container-fluid position-relative p-0">
        <nav class="navbar navbar-expand-lg navbar-dark px-5 py-3 py-lg-0">
            <a href="/" class="navbar-brand p-0">
                <img src="@logo.ImageUrl" alt="@logo.Name" class="img-fluid" style="height:50px;" />
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                <span class="fa fa-bars"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarCollapse">
                <div class="navbar-nav ms-auto py-0">

                    @* Render single links first *@
                    @foreach (var menu in navMenus.Where(m => string.IsNullOrEmpty(m.DropdownGroup)))
                    {
                        <a class="nav-item nav-link" asp-controller="@menu.Controller" asp-action="@menu.Action" asp-route-id="@menu.RouteId">
                            @menu.MenuName
                        </a>
                    }

                    @* Render dropdowns by unique group *@
                    @foreach (var group in navMenus.Where(m => !string.IsNullOrEmpty(m.DropdownGroup))
                                        .Select(m => m.DropdownGroup)
                                        .Distinct())
                    {
                        <div class="nav-item dropdown">
                            <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">@group</a>
                            <ul class="dropdown-menu">
                                @foreach (var subMenu in navMenus.Where(m => m.DropdownGroup == group))
                                {
                                    <li>
                                        <a class="dropdown-item" asp-controller="@subMenu.Controller" asp-action="@subMenu.Action" asp-route-id="@subMenu.RouteId">
                                            @subMenu.MenuName
                                        </a>
                                    </li>
                                }
                            </ul>
                        </div>
                    }

                </div>
            </div>
        </nav>

        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


   

    <!-- Footer -->
    <div class="container-fluid bg-dark text-light mt-5 wow fadeInUp">
        <div class="container">
            <div class="row gx-5">
                <div class="col-lg-4 col-md-6 footer-about">
                    <div class="d-flex flex-column align-items-center justify-content-center text-center h-100 bg-primary p-4">
                        <a href="/" class="navbar-brand">
                            <img src="@logo.ImageUrl" alt="@logo.Name" class="img-fluid" style="height:50px;" />
                        </a>
                        <p class="mt-3 mb-4">@footer.AboutContent</p>
                        <form action="">
                            <div class="input-group">
                                <input type="text" class="form-control border-white p-3" placeholder="Your Email">
                                <button class="btn btn-dark">Sign Up</button>
                            </div>
                        </form>
                    </div>
                </div>

                <div class="col-lg-8 col-md-6">
                    <div class="row gx-5">
                        <div class="col-lg-4 col-md-12 pt-5 mb-5">
                            <h3 class="text-light mb-3">Get In Touch</h3>
                            <div class="d-flex mb-2"><i class="bi bi-geo-alt text-primary me-2"></i>@footer.Address</div>
                            <div class="d-flex mb-2"><i class="bi bi-envelope-open text-primary me-2"></i>@footer.Email</div>
                            <div class="d-flex mb-2"><i class="bi bi-telephone text-primary me-2"></i>@footer.Phone</div>
                            <div class="d-flex mt-4">
                                @if(footer.Socials != null)
                                {
                                    foreach(var social in footer.Socials)
                                    {
                                        <a class="btn btn-primary btn-square me-2" href="@social.Url"><i class="@social.IconClass fw-normal"></i></a>
                                    }
                                }
                            </div>
                        </div>

                        <div class="col-lg-4 col-md-12 pt-5 mb-5">
                            <h3 class="text-light mb-3">Quick Links</h3>
                            <div class="d-flex flex-column justify-content-start">
                                @if(footer.QuickLinks != null)
                                {
                                    foreach(var link in footer.QuickLinks)
                                    {
                                        <a class="text-light mb-2" href="@link.Url"><i class="bi bi-arrow-right text-primary me-2"></i>@link.Title</a>
                                    }
                                }
                            </div>
                        </div>

                        <div class="col-lg-4 col-md-12 pt-5 mb-5">
                            <h3 class="text-light mb-3">Popular Links</h3>
                            <div class="d-flex flex-column justify-content-start">
                                @if(footer.PopularLinks != null)
                                {
                                    foreach(var link in footer.PopularLinks)
                                    {
                                        <a class="text-light mb-2" href="@link.Url"><i class="bi bi-arrow-right text-primary me-2"></i>@link.Title</a>
                                    }
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid text-white" style="background:#061429;">
        <div class="container text-center">
            <p class="mb-0">&copy; <a class="text-white border-bottom" href="#">@footer.Copyright</a>. All Rights Reserved. Designed by <a class="text-white border-bottom" href="@footer.AttributionUrl">@footer.AttributionText</a></p>
        </div>
    </div>

    <!-- Back to Top -->
    <a href="#" class="btn btn-lg btn-primary btn-lg-square rounded back-to-top"><i class="bi bi-arrow-up"></i></a>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/wow/wow.min.js"></script>
    <script src="~/lib/easing/easing.min.js"></script>
    <script src="~/lib/waypoints/waypoints.min.js"></script>
    <script src="~/lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="~/js/main.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
    @section Scripts {
        <script>
            document.addEventListener("DOMContentLoaded", function() {
                // Enable hover for dropdowns
                const dropdowns = document.querySelectorAll('.navbar .dropdown');
                dropdowns.forEach(drop => {
                    drop.addEventListener('mouseenter', () => {
                        const toggle = bootstrap.Dropdown.getOrCreateInstance(drop.querySelector('.dropdown-toggle'));
                        toggle.show();
                    });
                    drop.addEventListener('mouseleave', () => {
                        const toggle = bootstrap.Dropdown.getOrCreateInstance(drop.querySelector('.dropdown-toggle'));
                        toggle.hide();
                    });
                });
            });
        </script>
    }

</body>
</html>

@model IEnumerable<Business.Models.Blog.Tag>

@{
    ViewData["Title"] = "Tags";
    Layout = "~/Views/Shared/Admin.cshtml";
}

<h1 class="mb-4">Tags</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Create New Tag</a>
</p>

<table class="table table-striped table-hover align-middle">
    <thead class="table-dark">
        <tr>
            <th>Name</th>
            <th>Link</th>
            <th>Blog Detail</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Link</td>
                <td>
                    @if (item.BlogDetail != null)
                    {
                        @item.BlogDetail.Title
                    }
                    else
                    {
                        <span class="text-muted">No Blog Detail</span>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary me-1">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info text-white me-1">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

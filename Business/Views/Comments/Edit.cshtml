@model Business.Models.Blog.Comment

@{
    ViewData["Title"] = "Edit Comment";
    Layout = "~/Views/Shared/Admin.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-gradient-primary text-white">
            <h3 class="mb-0">Edit Comment</h3>
        </div>
        <div class="card-body">
            <form asp-action="Edit" enctype="multipart/form-data">
                <input type="hidden" asp-for="Id" />

                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <!-- Author Name -->
                <div class="mb-3">
                    <label asp-for="AuthorName" class="form-label fw-bold">Author Name</label>
                    <input asp-for="AuthorName" class="form-control shadow-sm" placeholder="Enter author name" />
                    <span asp-validation-for="AuthorName" class="text-danger"></span>
                </div>

                <!-- Author Image -->
                <div class="mb-3">
                    <label class="form-label fw-bold">Author Image</label>
                    <input type="file" class="form-control shadow-sm" name="AuthorImage" id="AuthorImage" />
                    <span asp-validation-for="AuthorImageUrl" class="text-danger"></span>
                </div>

                <!-- Current Image Preview -->
                <div class="mb-3 text-center">
                    <label class="form-label fw-bold">Image Preview</label>
                    <div class="border rounded p-2 d-inline-block">
                        <img id="preview" src="@Model.AuthorImageUrl" class="img-fluid rounded shadow-sm" style="max-width:150px;" />
                    </div>
                </div>

                <!-- Date -->
                <div class="mb-3">
                    <label asp-for="Date" class="form-label fw-bold">Date</label>
                    <input asp-for="Date" class="form-control shadow-sm" type="date" />
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>

                <!-- Content -->
                <div class="mb-3">
                    <label asp-for="Content" class="form-label fw-bold">Comment</label>
                    <textarea asp-for="Content" class="form-control shadow-sm" rows="4" placeholder="Write your comment here..."></textarea>
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>

                <!-- Is Reply -->
                <div class="form-check mb-3">
                    <input asp-for="IsReply" class="form-check-input" />
                    <label asp-for="IsReply" class="form-check-label fw-bold">Is Reply</label>
                </div>

                <!-- Blog Selection -->
                <div class="mb-3">
                    <label asp-for="BlogDetailId" class="form-label fw-bold">Select Blog</label>
                    <select asp-for="BlogDetailId" class="form-select shadow-sm" asp-items="ViewBag.BlogDetailId">
                        <option value="">-- Select Blog --</option>
                    </select>
                    <span asp-validation-for="BlogDetailId" class="text-danger"></span>
                </div>

                <!-- Buttons -->
                <div class="d-flex gap-2 mt-4">
                    <input type="submit" value="Save Changes" class="btn btn-success shadow-sm" />
                    <a asp-action="Index" class="btn btn-secondary shadow-sm">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const input = document.getElementById('AuthorImage');
        const preview = document.getElementById('preview');

        input.addEventListener('change', function () {
            const file = this.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function () {
                    preview.setAttribute('src', reader.result);
                };
                reader.readAsDataURL(file);
            }
        });
    </script>

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

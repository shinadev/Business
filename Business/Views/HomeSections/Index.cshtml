@model IEnumerable<Business.Models.Home.HomeSection>

@{
    ViewData["Title"] = "Home Sections";
    Layout = "~/Views/Shared/Admin.cshtml";
}

<h1 class="mb-4">Home Sections</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Section</a>
</p>

<table class="table table-striped table-hover align-middle">
    <thead class="table-dark">
        <tr>
            <th>Image</th>
            <th>Small Caption</th>
            <th>Large Caption</th>
            <th>Button 1 Text</th>
            <th>Button 1 URL</th>
            <th>Button 2 Text</th>
            <th>Button 2 URL</th>
            <th>Order</th>
            <th>Active</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td style="width: 150px;">
                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                    {
                        <img src="@item.ImageUrl" alt="Image" class="img-thumbnail" style="max-height: 80px;" />
                    }
                    else
                    {
                        <span class="text-muted">No image</span>
                    }
                </td>
                <td>@Html.DisplayFor(m => item.CaptionSmall)</td>
                <td>@Html.DisplayFor(m => item.CaptionLarge)</td>
                <td>@Html.DisplayFor(m => item.Button1Text)</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.Button1Url))
                    {
                        <a href="@item.Button1Url" target="_blank" rel="noopener noreferrer">@item.Button1Url</a>
                    }
                </td>
                <td>@Html.DisplayFor(m => item.Button2Text)</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.Button2Url))
                    {
                        <a href="@item.Button2Url" target="_blank" rel="noopener noreferrer">@item.Button2Url</a>
                    }
                </td>
                <td>@Html.DisplayFor(m => item.DisplayOrder)</td>
                <td>
                    @if (item.IsActive)
                    {
                        <span class="badge bg-success">Active</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Inactive</span>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning me-1">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info me-1">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

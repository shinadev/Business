@model Business.Models.Home.HomeSection

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/Admin.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Home Section</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.ImageUrl)</dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <img src="@Model.ImageUrl" alt="Image" class="img-thumbnail" style="max-width: 400px;" />
            }
            else
            {
                <span class="text-muted">No image available</span>
            }
        </dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.CaptionSmall)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.CaptionSmall)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.CaptionLarge)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.CaptionLarge)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Button1Text)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Button1Text)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Button1Url)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Button1Url)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Button2Text)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Button2Text)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Button2Url)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Button2Url)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.DisplayOrder)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.DisplayOrder)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.IsActive)</dt>
        <dd class="col-sm-10">
            @if (Model.IsActive)
            {
                <span class="badge bg-success">Active</span>
            }
            else
            {
                <span class="badge bg-secondary">Inactive</span>
            }
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning me-2">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

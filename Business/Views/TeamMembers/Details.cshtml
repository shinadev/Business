@model Business.Models.Team.TeamMember

@{
    ViewData["Title"] = "Team Member Details";
    Layout = "~/Views/Shared/Admin.cshtml";
}

<div class="container mt-5">
    <h2 class="mb-3">Team Member Details</h2>
    <hr />

    <div class="card shadow-sm">
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-4">Full Name</dt>
                <dd class="col-sm-8">@Model.FullName</dd>

                <dt class="col-sm-4">Designation</dt>
                <dd class="col-sm-8">@Model.Designation</dd>

                <dt class="col-sm-4">Profile Image</dt>
                <dd class="col-sm-8">
                    @if (!string.IsNullOrEmpty(Model.ImagePath))
                    {
                        <img src="@Url.Content(Model.ImagePath)" class="img-thumbnail" style="max-width: 150px;" alt="@Model.FullName" />
                    }
                    else
                    {
                        <span class="text-muted">No image uploaded</span>
                    }
                </dd>

                <dt class="col-sm-4">Twitter</dt>
                <dd class="col-sm-8">
                    @if (!string.IsNullOrEmpty(Model.TwitterUrl))
                    {
                        <a href="@Model.TwitterUrl" target="_blank">@Model.TwitterUrl</a>
                    }
                    else
                    {

                        <span class="text-muted">N/A</span>
                    }
                </dd>

                <dt class="col-sm-4">Facebook</dt>
                <dd class="col-sm-8">
                    @if (!string.IsNullOrEmpty(Model.FacebookUrl))
                    {
                        <a href="@Model.FacebookUrl" target="_blank">@Model.FacebookUrl</a>
                    }
                    else
                    {

                        <span class="text-muted">N/A</span>
                    }
                </dd>

                <dt class="col-sm-4">Instagram</dt>
                <dd class="col-sm-8">
                    @if (!string.IsNullOrEmpty(Model.InstagramUrl))
                    {
                        <a href="@Model.InstagramUrl" target="_blank">@Model.InstagramUrl</a>
                    }
                    else
                    {

                        <span class="text-muted">N/A</span>
                    }
                </dd>

                <dt class="col-sm-4">LinkedIn</dt>
                <dd class="col-sm-8">
                    @if (!string.IsNullOrEmpty(Model.LinkedInUrl))
                    {
                        <a href="@Model.LinkedInUrl" target="_blank">@Model.LinkedInUrl</a>
                    }
                    else
                    {

                        <span class="text-muted">N/A</span>
                    }
                </dd>
            </dl>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary me-2">
            <i class="bi bi-pencil-square me-1"></i> Edit
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left-circle me-1"></i> Back to List
        </a>
    </div>
</div>

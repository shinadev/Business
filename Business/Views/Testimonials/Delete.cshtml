@model Business.Models.Testimonial.Testimonials

@{
    ViewData["Title"] = "Delete Testimonial";
    Layout = "~/Views/Shared/Admin.cshtml";
}

<div class="container mt-4">
    <h2 class="mb-3 text-danger">Delete Testimonial</h2>
    <hr />

    <h5 class="mb-4">Are you sure you want to delete this testimonial?</h5>

    <div class="card shadow-sm mb-3">
        <div class="row g-0">
            <div class="col-md-4 text-center p-3">
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="@Model.ImageUrl" alt="Client Image" class="img-thumbnail" style="max-width: 200px;" />
                }
                else
                {
                    <div class="border rounded p-5 text-muted">No image uploaded</div>
                }
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Client Name</dt>
                        <dd class="col-sm-8">@Model.ClientName</dd>

                        <dt class="col-sm-4">Profession</dt>
                        <dd class="col-sm-8">@Model.Profession</dd>

                        <dt class="col-sm-4">Quote</dt>
                        <dd class="col-sm-8">@Model.Quote</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <form asp-action="Delete" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger me-2">Yes, Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>

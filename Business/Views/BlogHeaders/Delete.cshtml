@model Business.Models.Blog.BlogHeader

@{
    ViewData["Title"] = "Delete Blog Header";
    Layout = "~/Views/Shared/Admin.cshtml";
}

<h1 class="mb-4 text-danger">Delete Blog Header</h1>

<h5>Are you sure you want to delete this item?</h5>

<div class="card shadow-sm p-3 mb-4">
    <div class="card-body">
        <dl class="row mb-3">
            <dt class="col-sm-3">Title</dt>
            <dd class="col-sm-9">@Model.Title</dd>

            <dt class="col-sm-3">Breadcrumb Home Text</dt>
            <dd class="col-sm-9">@Model.BreadcrumbHomeText</dd>

            <dt class="col-sm-3">Breadcrumb Home URL</dt>
            <dd class="col-sm-9">@Model.BreadcrumbHomeUrl</dd>

            <dt class="col-sm-3">Breadcrumb Current Text</dt>
            <dd class="col-sm-9">@Model.BreadcrumbCurrentText</dd>

            <dt class="col-sm-3">Breadcrumb Current URL</dt>
            <dd class="col-sm-9">@Model.BreadcrumbCurrentUrl</dd>

            <dt class="col-sm-3">Image</dt>
            <dd class="col-sm-9">
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="@Model.ImageUrl" alt="Blog Header Image" class="img-fluid rounded shadow-sm" style="max-height:200px;" />
                }
                else
                {
                    <span class="text-muted">No image uploaded</span>
                }
            </dd>
        </dl>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary ms-2">Back to List</a>
        </form>
    </div>
</div>

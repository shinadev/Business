@model IEnumerable<Business.Models.Blog.BlogHeader>

@{
    ViewData["Title"] = "Blog Headers";
    Layout = "~/Views/Shared/Admin.cshtml";
}

<h1 class="mb-4">Blog Headers</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>

<table class="table table-striped table-hover align-middle">
    <thead class="table-dark">
        <tr>
            <th>Title</th>
            <th>Breadcrumb Home Text</th>
            <th>Breadcrumb Home URL</th>
            <th>Breadcrumb Current Text</th>
            <th>Breadcrumb Current URL</th>
            <th>Image</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.BreadcrumbHomeText</td>
                <td>@item.BreadcrumbHomeUrl</td>
                <td>@item.BreadcrumbCurrentText</td>
                <td>@item.BreadcrumbCurrentUrl</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                    {
                        <img src="@item.ImageUrl" alt="Image" class="img-thumbnail" style="max-height:80px;" />
                    }
                    else
                    {
                        <span class="text-muted">No image</span>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary me-1">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info text-white me-1">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@model Business.Models.Menu.FooterMenu

@{
    ViewData["Title"] = "Create Footer Menu";
    Layout = "~/Views/Shared/Admin.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-lg rounded">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0"><i class="fas fa-plus-circle"></i> Create Footer Menu</h4>
            <a asp-action="Index" class="btn btn-light btn-sm">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
        </div>
        <div class="card-body">
            <form asp-action="Create" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group">
                    <label asp-for="AboutTitle"></label>
                    <input asp-for="AboutTitle" class="form-control" placeholder="Enter About Title" />
                    <span asp-validation-for="AboutTitle" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="AboutContent"></label>
                    <textarea asp-for="AboutContent" class="form-control" rows="3" placeholder="Enter About Content"></textarea>
                    <span asp-validation-for="AboutContent" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Address"></label>
                    <input asp-for="Address" class="form-control" placeholder="Enter Address" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" type="email" class="form-control" placeholder="Enter Email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Phone"></label>
                    <input asp-for="Phone" class="form-control" placeholder="Enter Phone Number" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Copyright"></label>
                    <input asp-for="Copyright" class="form-control" placeholder="Enter Copyright" />
                    <span asp-validation-for="Copyright" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="AttributionText"></label>
                    <input asp-for="AttributionText" class="form-control" placeholder="Enter Attribution Text" />
                    <span asp-validation-for="AttributionText" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="AttributionUrl"></label>
                    <input asp-for="AttributionUrl" class="form-control" placeholder="Enter Attribution URL" />
                    <span asp-validation-for="AttributionUrl" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-success">
                    <i class="fas fa-save"></i> Create
                </button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

@model Business.Models.Menu.FooterMenu

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/Admin.cshtml"; // Ensure this layout exists
}

<h1 class="text-danger">Delete Footer Menu</h1>

<h3 class="text-warning">Are you sure you want to delete this footer content?</h3>
<hr />

<div class="table-responsive">
    <table class="table table-bordered">
        <tr>
            <th>@Html.DisplayNameFor(model => model.AboutTitle)</th>
            <td>@Html.DisplayFor(model => model.AboutTitle)</td>
        </tr>
        <tr>
            <th>@Html.DisplayNameFor(model => model.AboutContent)</th>
            <td>@Html.DisplayFor(model => model.AboutContent)</td>
        </tr>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Address)</th>
            <td>@Html.DisplayFor(model => model.Address)</td>
        </tr>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Email)</th>
            <td>@Html.DisplayFor(model => model.Email)</td>
        </tr>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Phone)</th>
            <td>@Html.DisplayFor(model => model.Phone)</td>
        </tr>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Copyright)</th>
            <td>@Html.DisplayFor(model => model.Copyright)</td>
        </tr>
        <tr>
            <th>@Html.DisplayNameFor(model => model.AttributionText)</th>
            <td>@Html.DisplayFor(model => model.AttributionText)</td>
        </tr>
        <tr>
            <th>@Html.DisplayNameFor(model => model.AttributionUrl)</th>
            <td>@Html.DisplayFor(model => model.AttributionUrl)</td>
        </tr>
    </table>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="mt-3">
        <input type="submit" value="Yes, Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>

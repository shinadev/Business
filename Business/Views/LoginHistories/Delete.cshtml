@model Business.Models.User.LoginHistory

@{
    ViewData["Title"] = "Delete Login History";
    Layout = "Admin";
}

<div class="container-fluid px-4">
    <h1 class="mt-4 text-danger"><i class="fas fa-trash-alt me-2"></i>Delete Entry</h1>
    <p class="lead">Are you sure you want to delete this login history record?</p>

    <div class="card border-danger mb-4">
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3">Admin Email</dt>
                <dd class="col-sm-9">@Model.AdminEmail</dd>

                <dt class="col-sm-3">Admin Username</dt>
                <dd class="col-sm-9">@Model.AdminUsername</dd>

                <dt class="col-sm-3">Role</dt>
                <dd class="col-sm-9">@Model.Role</dd>

                <dt class="col-sm-3">Timestamp</dt>
                <dd class="col-sm-9">@Model.Timestamp.ToString("g")</dd>

                <dt class="col-sm-3">Action</dt>
                <dd class="col-sm-9">@Model.Action</dd>

                <dt class="col-sm-3">IP Address</dt>
                <dd class="col-sm-9">@Model.IPAddress</dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger me-2">
            <i class="fas fa-trash-alt me-1"></i> Delete
        </button>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-1"></i> Back to List
        </a>
    </form>
</div>


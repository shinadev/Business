@model IEnumerable<Business.Models.User.LoginHistory>

@{
    ViewData["Title"] = "Login History";
    Layout = "Admin";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">@ViewData["Title"]</h1>

    <div class="card shadow-sm border-0 mb-4">
        <div class="card-body">
            <table class="table table-striped table-bordered table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Email</th>
                        <th>Username</th>
                        <th>Role</th>
                        <th>Timestamp</th>
                        <th>Action</th>
                        <th>IP Address</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.AdminEmail</td>
                                <td>@item.AdminUsername</td>
                                <td>@item.Role</td>
                                <td>@item.Timestamp.ToString("g")</td>
                                <td>@item.Action</td>
                                <td>@item.IPAddress</td>
                                <td class="text-center">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning me-1">
                                        <i class="fas fa-edit">Edit</i>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info me-1">
                                        <i class="fas fa-eye">View</i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                                        <i class="fas fa-trash-alt">Delete</i>
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" class="text-center text-muted">No login history found.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


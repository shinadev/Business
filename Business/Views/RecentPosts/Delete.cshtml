@model Business.Models.Blog.RecentPost

@{
    ViewData["Title"] = "Delete Recent Post";
    Layout = "~/Views/Shared/Admin.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-danger text-white">
            <h3 class="mb-0">Delete Recent Post</h3>
        </div>
        <div class="card-body">
            <h5>Are you sure you want to delete this post?</h5>
            <hr />

            <dl class="row">
                <dt class="col-sm-2">Title</dt>
                <dd class="col-sm-10">@Model.Title</dd>

                <dt class="col-sm-2">Image</dt>
                <dd class="col-sm-10">
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <img src="@Model.ImageUrl" alt="@Model.Title" class="img-thumbnail" style="max-width:150px;" />
                    }
                    else
                    {
                        <span class="text-muted">No image available</span>
                    }
                </dd>

                <dt class="col-sm-2">Link</dt>
                <dd class="col-sm-10">@Model.Link</dd>

                <dt class="col-sm-2">Blog</dt>
                <dd class="col-sm-10">@Model.BlogDetail?.Title ?? "N/A"</dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex gap-2">
                    <input type="submit" value="Delete" class="btn btn-danger" />
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

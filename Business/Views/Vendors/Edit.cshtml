@model Business.Models.Vendor.Vendors

@{
    ViewData["Title"] = "Edit Vendor";
    Layout = "~/Views/Shared/Admin.cshtml";
}

<div class="card shadow-lg border-0 rounded-3 mt-4">
    <div class="card-header bg-warning text-white">
        <h4 class="mb-0"><i class="bi bi-pencil-square"></i> Edit Vendor</h4>
    </div>
    <div class="card-body">
        <form asp-action="Edit" enctype="multipart/form-data">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <!-- Current Image Preview -->
            <div class="mb-3 text-center">
                @if (!string.IsNullOrEmpty(Model.ImagePath))
                {
                    <img src="@Model.ImagePath" alt="@Model.AltText" class="img-thumbnail mb-2" style="max-width: 200px;" />
                }
                else
                {
                    <p class="text-muted fst-italic">No image uploaded</p>
                }
            </div>

            <!-- Upload New Image -->
            <div class="mb-3">
                <label class="form-label fw-bold">Upload New Image</label>
                <input type="file" name="ImageFile" class="form-control" />
                <small class="text-muted">Leave empty to keep the current image</small>
            </div>

            <!-- Alt Text -->
            <div class="mb-3">
                <label asp-for="AltText" class="form-label fw-bold"></label>
                <input asp-for="AltText" class="form-control" />
                <span asp-validation-for="AltText" class="text-danger"></span>
            </div>

            <!-- Vendor Link -->
            <div class="mb-3">
                <label asp-for="Link" class="form-label fw-bold"></label>
                <input asp-for="Link" class="form-control" />
                <span asp-validation-for="Link" class="text-danger"></span>
            </div>

            <!-- Actions -->
            <div class="mt-4">
                <button type="submit" class="btn btn-success px-3">
                    <i class="bi bi-save"></i> Save Changes
                </button>
                <a asp-action="Index" class="btn btn-secondary ms-2 px-3">
                    <i class="bi bi-arrow-left"></i> Cancel
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}

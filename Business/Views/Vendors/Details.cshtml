@model Business.Models.Vendor.Vendors

@{
    ViewData["Title"] = "Vendor Details";
    Layout = "~/Views/Shared/Admin.cshtml";
}

<div class="card shadow-lg border-0 rounded-3 mt-4">
    <div class="card-header bg-info text-white">
        <h4 class="mb-0"><i class="bi bi-info-circle"></i> Vendor Details</h4>
    </div>
    <div class="card-body">

        <!-- Vendor Image -->
        <div class="text-center mb-4">
            @if (!string.IsNullOrEmpty(Model.ImagePath))
            {
                <img src="@Model.ImagePath" alt="@Model.AltText" class="img-thumbnail border" style="max-width: 250px;" />
            }
            else
            {
                <p class="text-muted fst-italic">No image uploaded</p>
            }
        </div>

        <!-- Vendor Info -->
        <dl class="row">
            <dt class="col-sm-3 fw-bold">Alt Text</dt>
            <dd class="col-sm-9">@Model.AltText</dd>

            <dt class="col-sm-3 fw-bold">Website Link</dt>
            <dd class="col-sm-9">
                @if (!string.IsNullOrEmpty(Model.Link))
                {
                    <a href="@Model.Link" target="_blank">@Model.Link</a>
                }
                else
                {
                    <span class="text-muted">No link provided</span>
                }
            </dd>
        </dl>

        <!-- Actions -->
        <div class="mt-4">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning px-3">
                <i class="bi bi-pencil"></i> Edit
            </a>
            <a asp-action="Index" class="btn btn-secondary ms-2 px-3">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
</div>

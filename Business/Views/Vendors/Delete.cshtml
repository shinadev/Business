@model Business.Models.Vendor.Vendors

@{
    ViewData["Title"] = "Delete Vendor";
    Layout = "~/Views/Shared/Admin.cshtml";
}

<div class="card shadow-lg border-0 rounded-3 mt-4">
    <div class="card-header bg-danger text-white">
        <h4 class="mb-0"><i class="bi bi-trash"></i> Delete Vendor</h4>
    </div>
    <div class="card-body">
        <h5 class="text-danger">Are you sure you want to delete this vendor?</h5>
        <hr />

        <!-- Vendor Image -->
        <div class="mb-3 text-center">
            @if (!string.IsNullOrEmpty(Model.ImagePath))
            {
                <img src="@Model.ImagePath" alt="@Model.AltText" class="img-thumbnail border" style="max-width: 200px;" />
            }
            else
            {
                <p class="text-muted fst-italic">No image uploaded</p>
            }
        </div>

        <!-- Vendor Details -->
        <dl class="row">
            <dt class="col-sm-3 fw-bold">Alt Text</dt>
            <dd class="col-sm-9">@Model.AltText</dd>

            <dt class="col-sm-3 fw-bold">Website Link</dt>
            <dd class="col-sm-9">
                @if (!string.IsNullOrEmpty(Model.Link))
                {
                    <a href="@Model.Link" target="_blank">@Model.Link</a>
                }
                else
                {
                    <span class="text-muted">No link provided</span>
                }
            </dd>
        </dl>

        <!-- Delete Confirmation Form -->
        <form asp-action="Delete" class="mt-4">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger px-4">
                <i class="bi bi-trash-fill"></i> Yes, Delete
            </button>
            <a asp-action="Index" class="btn btn-secondary ms-2">
                <i class="bi bi-arrow-left"></i> Cancel
            </a>
        </form>
    </div>
</div>

@model Business.Models.Vendor.Vendors

@{
    ViewData["Title"] = "Create Vendor";
    Layout = "~/Views/Shared/Admin.cshtml";
}

<div class="card shadow-lg border-0 rounded-3 mt-4">
    <div class="card-header bg-primary text-white">
        <h4 class="mb-0"><i class="bi bi-plus-circle"></i> Create Vendor</h4>
    </div>
    <div class="card-body">
        <form asp-action="Create" enctype="multipart/form-data">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <!-- Image Upload -->
            <div class="mb-3">
                <label class="form-label fw-bold">Vendor Image</label>
                <input type="file" name="ImageFile" class="form-control" accept="image/*" onchange="previewImage(event)" required />
                <span asp-validation-for="ImagePath" class="text-danger"></span>

                <div class="mt-3">
                    <img id="preview" src="#" alt="Image Preview" style="max-width: 200px; display: none;" class="img-thumbnail border" />
                </div>
            </div>

            <!-- Alt Text -->
            <div class="mb-3">
                <label asp-for="AltText" class="form-label fw-bold"></label>
                <input asp-for="AltText" class="form-control" placeholder="Enter alternative text for image" />
                <span asp-validation-for="AltText" class="text-danger"></span>
            </div>

            <!-- Vendor Link -->
            <div class="mb-3">
                <label asp-for="Link" class="form-label fw-bold"></label>
                <input asp-for="Link" class="form-control" placeholder="Enter vendor website link (optional)" />
                <span asp-validation-for="Link" class="text-danger"></span>
            </div>

            <!-- Submit -->
            <div class="mt-4">
                <button type="submit" class="btn btn-success px-4">
                    <i class="bi bi-save"></i> Save Vendor
                </button>
                <a asp-action="Index" class="btn btn-secondary ms-2 px-4">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }

    <script>
        function previewImage(event) {
            var preview = document.getElementById('preview');
            preview.src = URL.createObjectURL(event.target.files[0]);
            preview.style.display = 'block';
        }
    </script>
}

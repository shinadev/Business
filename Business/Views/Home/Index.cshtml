@model Business.ViewModels.HomePageViewModel

@{
    ViewData["Title"] = "Home Page";
}

<!-- Carousel Start -->
<div id="header-carousel" class="carousel slide carousel-fade" data-bs-ride="carousel">
    <div class="carousel-inner">
        @for (int i = 0; i < Model.HomeSections.Count; i++)
        {
            var slide = Model.HomeSections[i];
                                               <div class="carousel-item @(i == 0 ? "active" : "")">
                                                   <img class="w-100" src="@slide.ImageUrl" alt="Image">
                                                   <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                                                       <div class="p-3" style="max-width: 900px;">
                                                           <h5 class="text-white text-uppercase mb-3 animated slideInDown">@slide.CaptionSmall</h5>
                                                           <h1 class="display-1 text-white mb-md-4 animated zoomIn">@slide.CaptionLarge</h1>
                                                           <a href="@slide.Button1Url" class="btn btn-primary py-md-3 px-md-5 me-3 animated slideInLeft">@slide.Button1Text</a>
                                                           <a href="@slide.Button2Url" class="btn btn-outline-light py-md-3 px-md-5 animated slideInRight">@slide.Button2Text</a>
                                                       </div>
                                                   </div>
                                               </div>
        }

    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#header-carousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#header-carousel" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>
<!-- Carousel End -->

<!-- About Start -->
<div class="container-fluid py-5 wow fadeInUp" data-wow-delay="0.1s">
    <div class="container py-5">
        <div class="row g-5">
            <div class="col-lg-7">
                <div class="section-title position-relative pb-3 mb-5">
                    <h5 class="fw-bold text-primary text-uppercase">@Model.AboutSection.Subtitle</h5>
                    <h1 class="mb-0">@Model.AboutSection.Title</h1>
                </div>
                <p class="mb-4">@Model.AboutSection.Description</p>
                <div class="row g-0 mb-3">
                    <div class="col-sm-6 wow zoomIn" data-wow-delay="0.2s">
                        <h5 class="mb-3"><i class="fa fa-check text-primary me-3"></i>@Model.AboutSection.Feature1</h5>
                        <h5 class="mb-3"><i class="fa fa-check text-primary me-3"></i>@Model.AboutSection.Feature2</h5>
                    </div>
                    <div class="col-sm-6 wow zoomIn" data-wow-delay="0.4s">
                        <h5 class="mb-3"><i class="fa fa-check text-primary me-3"></i>@Model.AboutSection.Feature3</h5>
                        <h5 class="mb-3"><i class="fa fa-check text-primary me-3"></i>@Model.AboutSection.Feature4</h5>
                    </div>
                </div>
                <div class="d-flex align-items-center mb-4 wow fadeIn" data-wow-delay="0.6s">
                    <div class="bg-primary d-flex align-items-center justify-content-center rounded" style="width: 60px; height: 60px;">
                        <i class="fa fa-phone-alt text-white"></i>
                    </div>
                    <div class="ps-4">
                        <h5 class="mb-2">@Model.AboutSection.ContactText</h5>
                        <h4 class="text-primary mb-0">@Model.AboutSection.PhoneNumber</h4>
                    </div>
                </div>
                <a href="@Model.AboutSection.QuoteButtonUrl" class="btn btn-primary py-3 px-5 mt-3 wow zoomIn" data-wow-delay="0.9s">@Model.AboutSection.QuoteButtonText</a>
            </div>
            <div class="col-lg-5" style="min-height: 500px;">
                <div class="position-relative h-100">
                    <img class="position-absolute w-100 h-100 rounded wow zoomIn" data-wow-delay="0.9s" src="@Model.AboutSection.ImageUrl" style="object-fit: cover;">
                </div>
            </div>
        </div>
    </div>
</div>
<!-- About End -->

<!-- Vendor Start -->
<div class="container-fluid py-5 wow fadeInUp" data-wow-delay="0.1s">
    <div class="container py-5 mb-5">
        <div class="bg-white">
            <div class="owl-carousel vendor-carousel">
                @foreach (var vendor in Model.Vendors)
                {
                    <img src="@vendor.ImagePath" alt="@vendor.AltText" />
                }
            </div>
        </div>
    </div>
</div>
<!-- Vendor End -->

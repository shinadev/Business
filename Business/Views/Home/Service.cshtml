@model Business.ViewModels.ServicePageViewModel

@{
    ViewData["Title"] = "Services";
}

<!-- Header -->
<div class="container-fluid bg-primary py-5 bg-header"  style="margin-bottom: 90px;" > @* background-image:url('@Model.ImageUrl'); background-size:cover; background-position:center; *@
    <div class="row py-5">
        <div class="col-12 pt-lg-5 mt-lg-5 text-center">
            <h1 class="display-4 text-white animated zoomIn">@Model.Header?.Title</h1>
            <a href="@Model.Header?.BreadcrumbHomeUrl" class="h5 text-white">@Model.Header?.BreadcrumbHomeText</a>
            <i class="far fa-circle text-white px-2"></i>
            <a href="@Model.Header?.BreadcrumbCurrentUrl" class="h5 text-white">@Model.Header?.BreadcrumbCurrentText</a>
        </div>
    </div>
</div>

<!-- Service Section -->
<div class="container-fluid py-5 wow fadeInUp" data-wow-delay="0.1s">
    <div class="container py-5">
        <div class="section-title text-center position-relative pb-3 mb-5 mx-auto" style="max-width: 600px;">
            <h5 class="fw-bold text-primary text-uppercase">@Model.SmallTitle</h5>
            <h1 class="mb-0">@Model.MainTitle</h1>
        </div>

        <div class="row g-5">
            @if (Model.Services != null && Model.Services.Any())
            {
                var delay = 0.3;
                foreach (var service in Model.Services)
                {
                    <div class="col-lg-4 col-md-6 wow zoomIn" data-wow-delay="@($"{delay}s")">
                        <div class="service-item bg-light rounded d-flex flex-column align-items-center justify-content-center text-center">
                            <div class="service-icon">
                                <i class="@service.IconClass text-white"></i>
                            </div>
                            <h4 class="mb-3">@service.Title</h4>
                            <p class="m-0">@service.Description</p>
                            @if (!string.IsNullOrWhiteSpace(service.LinkUrl))
                            {
                                <a class="btn btn-lg btn-primary rounded" href="@service.LinkUrl">
                                    <i class="bi bi-arrow-right"></i>
                                </a>
                            }
                        </div>
                    </div>
                    delay += 0.3;
                }
            }

            @* Call To Action Block *@
            @if (Model.CallToAction != null)
            {
                <div class="col-lg-4 col-md-6 wow zoomIn" data-wow-delay="0.9s">
                    <div class="position-relative bg-primary rounded h-100 d-flex flex-column align-items-center justify-content-center text-center p-5">
                        <h3 class="text-white mb-3">@Model.CallToAction.Title</h3>
                        <p class="text-white mb-3">@Model.CallToAction.Description</p>
                        <h2 class="text-white mb-0">@Model.CallToAction.PhoneNumber</h2>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<!-- Service End -->

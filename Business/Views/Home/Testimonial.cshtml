@model Business.ViewModels.TestimonialPageViewModel
@{
    ViewData["Title"] = "Testimonials";
}

<!-- Header -->
<div class="container-fluid bg-primary py-5 bg-header" style="margin-bottom: 90px;">
    <div class="row py-5">
        <div class="col-12 pt-lg-5 mt-lg-5 text-center">
            <h1 class="display-4 text-white">@Model.TestimonialSection.SectionTitle</h1>
            <a href="/" class="h5 text-white">Home</a>
            <i class="far fa-circle text-white px-2"></i>
            <span class="h5 text-white">@Model.TestimonialSection.SectionTitle</span>
        </div>
    </div>
</div>

<!-- Testimonial Start -->
<div class="container-fluid py-5 wow fadeInUp" data-wow-delay="0.1s">/
    <div class="container py-5">
        <div class="section-title text-center position-relative pb-3 mb-4 mx-auto" style="max-width: 600px;">
            <h5 class="fw-bold text-primary text-uppercase">@Model.TestimonialSection.SectionTitle</h5>
            <h1 class="mb-0">@Model.TestimonialSection.MainHeading</h1>
        </div>

        @if (Model.TestimonialSection.Testimonials != null && Model.TestimonialSection.Testimonials.Any())
        {
            <div class="owl-carousel testimonial-carousel wow fadeInUp" data-wow-delay="0.6s">
                @foreach (var t in Model.TestimonialSection.Testimonials)
                {
                    <div class="testimonial-item bg-light my-4">
                        <div class="d-flex align-items-center border-bottom pt-5 pb-4 px-5">
                            <img class="img-fluid rounded" src="@t.ImageUrl" style="width: 60px; height: 60px;" alt="@t.ClientName" />
                            <div class="ps-4">
                                <h4 class="text-primary mb-1">@t.ClientName</h4>
                                <small class="text-uppercase">@t.Profession</small>
                            </div>
                        </div>
                        <div class="pt-4 pb-5 px-5">
                            @t.Quote
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <p class="text-center text-muted">No testimonials available at the moment.</p>
        }
    </div>
</div>
<!-- Testimonial End -->
<!-- Vendor Start -->
<div class="container-fluid py-5 wow fadeInUp" data-wow-delay="0.1s">
    <div class="container py-5 mb-5">
        <div class="bg-white">
            @if (Model.Vendors != null && Model.Vendors.Any())
            {
                <div class="owl-carousel vendor-carousel">
                    @foreach (var vendor in Model.Vendors)
                    {
                        <img src="@vendor.ImagePath" alt="@vendor.AltText" />
                    }
                </div>
            }
            else
            {
                <p class="text-center text-muted">No vendors available at the moment.</p>
            }
        </div>
    </div>
</div>
<!-- Vendor End -->
@section Scripts {
    <script>
        $(".testimonial-carousel").owlCarousel({
            autoplay: true,
            smartSpeed: 1000,
            margin: 25,
            dots: true,
            loop: true,
            items: 1
        });

        $(".vendor-carousel").owlCarousel({
            autoplay: true,
            smartSpeed: 1000,
            margin: 25,
            loop: true,
            dots: false,
            responsive: {
                0: { items: 2 },
                600: { items: 3 },
                1000: { items: 5 }
            }
        });
    </script>
}
                        <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.MainTitle)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.MainTitle)</dd>

                        <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.PhoneTitle)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.PhoneTitle)</dd>

                        <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.PhoneNumber)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.PhoneNumber)</dd>

                        <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.EmailTitle)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.EmailTitle)</dd>

                        <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.EmailAddress)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.EmailAddress)</dd>

                        <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.OfficeTitle)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.OfficeTitle)</dd>

                        <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.OfficeAddress)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.OfficeAddress)</dd>

                        <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.NamePlaceholder)</dt>

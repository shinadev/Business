@model Business.Models.Contact.ContactSection

@{
    ViewData["Title"] = "Delete Contact Section";
    Layout = "~/Views/Shared/Admin.cshtml";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header bg-danger text-white text-center py-3">
                    <h3 class="mb-0"><i class="bi bi-exclamation-triangle-fill"></i> Confirm Delete</h3>
                </div>
                <div class="card-body p-4">
                    <div class="alert alert-warning text-center">
                        <strong>Are you sure you want to delete this Contact Section?</strong><br />
                        This action cannot be undone.
                    </div>

                    <dl class="row mb-4">
                        <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.SmallTitle)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.SmallTitle)</dd>

                        <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.MainTitle)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.MainTitle)</dd>

                        <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.PhoneTitle)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.PhoneTitle)</dd>

                        <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.PhoneNumber)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.PhoneNumber)</dd>

                        <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.EmailTitle)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.EmailTitle)</dd>

                        <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.EmailAddress)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.EmailAddress)</dd>

                        <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.OfficeTitle)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.OfficeTitle)</dd>

                        <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.OfficeAddress)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.OfficeAddress)</dd>

                        <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.NamePlaceholder)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.NamePlaceholder)</dd>

                        <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.EmailPlaceholder)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.EmailPlaceholder)</dd>

                        <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.SubjectPlaceholder)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.SubjectPlaceholder)</dd>

                        <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.MessagePlaceholder)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.MessagePlaceholder)</dd>

                        <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.ButtonText)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.ButtonText)</dd>

                        <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.MapUrl)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.MapUrl)</dd>
                    </dl>

                    <form asp-action="Delete" class="d-flex justify-content-between">
                        <input type="hidden" asp-for="Id" />
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Cancel
                        </a>
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash-fill"></i> Delete
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
